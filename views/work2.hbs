                <p>Interactive Media Designer <br> &amp; Video Producer</p>
                <a id="mainBth" class="btn btn-light" href="/portfolio" role="button">Explore More</a>
                </div>

            <div class="col-6 align-self-center no-padding">
                <object data="images/squareSun.svg" type="image/svg+xml" class="svg-graphic" id="square">
                </object>
            </div>    
            </div>
        </div>
    </section>

<section id="section2" class="panel2">
    <div class="container">
    <div class="row">
        <div class="col align-self-end no-padding">
              <object data="images/orange2.svg" type="image/svg+xml" class="svg-graphic" id="orange1">
                </object>
        </div>
    </div>
    <div class="row">
        <div class="col no-padding">
            {{!-- <img src="images/logoBg.svg" id="mainImgBg"> --}}
              <img src="images/img.png" alt="me" id="mainImg">
        </div>
        <div class="col no-padding" id="mainInfo">
            <h2>Adventures in creativity</h2>
            <h3>Ryan Sun is a multimedia designer, specializing in graphic design and VFX. He thrives in fast paced work environments, where he is able to push his skills and abilities to new levels under pressure. </h3>
            <a id="aboutBth" class="btn" href="#" role="button">ABOUT</a>
        </div>
    </div>
    </div>
</section>

<section id="section3" class="panel3">
    <div class="container">
    <div class="row">
        <div class="col align-self-center no-padding">
              <h2>FEATURED WORK</h2>
        </div>

        <template id="user-template">
                <div class="col">
        <div class="user-panel">
            <div class="user-panel-header">
                <img class="u-avatar"></img>
                <h2 class="u-name"></h2>
            </div>
            {{!-- <button class="user-button">More Details</button> --}}
        </div>
            </div>
        </template>

    </div>
    
       <div class="work">
    <div class="things-panel">
        <div class="row">
        {{#each thing}}
        <div class="user-panel col-4">
             <img class="u-avatar" src="images/{{ Image }}" alt="avatar" href="/{{ Image }}">
             <div class="workText">
                <h2>{{ Name }}</h2>
                <h4>{{ Category }}</h4>
             </div>
            
            <p>{{ Description }}</p>
        </div>
        {{/each}}

    </div>
    </div>

    </div>
    </div>
</section>


